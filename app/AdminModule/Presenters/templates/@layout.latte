<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title n:snippet="title">{ifset title}{include title|stripHtml} | {/ifset}Eshop</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div style="position: fixed; right: 0; top: 0; z-index: 10; padding: 1rem; margin-top: 4rem;">
        {foreach $flashes as $flash}
        <div class="alert alert-{$flash->type=='error'?'danger':$flash->type} alert-dismissible fade show" role="alert">
            {$flash->message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {/foreach}
    </div>

	<div n:snippet="content" class="container">
		{include content}
	</div>

	{block scripts}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/nette-forms@3.3.1/src/assets/netteForms.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/naja@2.1.5/dist/Naja.min.js"></script>
	{/block}

	<script>
	document.addEventListener('DOMContentLoaded', () => naja.initialize());
	</script>
</body>
</html>
