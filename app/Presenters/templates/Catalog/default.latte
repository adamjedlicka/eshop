{block title}Seznam produkt≈Ø{/block}

{block content}

<div class="columns is-multiline mt-4">
  {foreach $products as $product}
  <div class="column is-half">
    <div class="card">
      <div class="card-content">
        <p class="title">{$product->name}</p>
        <p class="content">{$product->description}</p>
      </div>
      <div class="card-footer">
        <small class="card-footer-item">{$product->price|price}</small>
        <a n:href="show $product->slug" class="ajax card-footer-item">Detail</a>
      </div>
    </div>
  </div>
  {/foreach}
</div>
