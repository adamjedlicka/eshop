<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title n:snippet="title">{ifset title}{include title|stripHtml} | {/ifset}Eshop</title>
	<link href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css" rel="stylesheet">
</head>

<body>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

	{include '_header.latte'}

	<div n:snippet="content" class="container">
		{include content}
	</div>

	{include '_footer.latte'}

	{block scripts}
	<script src="https://cdn.jsdelivr.net/npm/naja@2.1.5/dist/Naja.min.js"></script>
	{/block}

	<script>
	document.addEventListener('DOMContentLoaded', () => naja.initialize());
	</script>
</body>
</html>
