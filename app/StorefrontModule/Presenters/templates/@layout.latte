<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title n:snippet="title">{ifset title}{include title|stripHtml} | {/ifset}Eshop</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100" style="overflow-y: scroll">
    <div style="position: fixed; right: 0; top: 0; z-index: 10; padding: 1rem; margin-top: 4rem;">
        {foreach $flashes as $flash}
        <div class="alert alert-{$flash->type=='error'?'danger':$flash->type} alert-dismissible fade show" role="alert">
            {$flash->message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {/foreach}
    </div>

	{control header}

	<div n:snippet="content" class="container flex-grow-1">
		{include content}
	</div>

    <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item"><a href="{plink CmsPage:view home}" class="ajax nav-link px-2 text-muted">Home</a></li>
            <li class="nav-item"><a href="{plink CmsPage:view features}" class="ajax nav-link px-2 text-muted">Features</a></li>
            <li class="nav-item"><a href="{plink CmsPage:view pricing}" class="ajax nav-link px-2 text-muted">Pricing</a></li>
            <li class="nav-item"><a href="{plink CmsPage:view faq}" class="ajax nav-link px-2 text-muted">FAQs</a></li>
            <li class="nav-item"><a href="{plink CmsPage:view about}" class="ajax nav-link px-2 text-muted">About</a></li>
        </ul>
        <p class="text-center text-muted">© 2021 Adam Jedlička & Ondřej Michálek</p>
  </footer>

	{block scripts}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/nette-forms@3.3.1/src/assets/netteForms.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/naja@2.1.5/dist/Naja.min.js"></script>
    <link rel="stylesheet" href="{$basePath}/style/main.css">
    {/block}

	<script>
	document.addEventListener('DOMContentLoaded', () => naja.initialize());
	</script>
</body>
</html>
